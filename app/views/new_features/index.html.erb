<div class="container">
  <div class="row">
    <div class="col-xs-12">
     <% @news.each do |nf|  %>
      <div class="news-item">
        <div class="title">
          <div class="news-date">
            <p class="created-day"><%= nf.created_at.strftime("%e") %></p>
            <p class="created-month"><%= nf.created_at.strftime("%b") %></p>
          </div>
            <h2 style="color:#445d77"><%= nf.title %></h2>
        </div>
        <hr style="border-color:#9d9d9d6b;margin:8px 0 8px 0;">
        <p class="news-info">Details</p>
        <p style="color:#778899"><%= nf.text %></p>
        <p class="image-control">
          <% if nf.image.attachment != nil %>
          <%= image_tag nf.image %>
          <% end %>
        </p>
      </div>
      <% end %>
    </div>
  </div>
</div>


<style>
  .news-item  {
    border-bottom: 1px solid grey;
    margin:10px;
  }

  .title {
    display: flex;
  }

  .news-date {
    /*display: flex;*/
    /*flex-direction: column;*/
    /*border-right: 1px solid red;*/
    padding: 12px 15px;
    margin: 0px 15px 6px 0px;
    background: #1c60ad;
    border: 1px solid #2c97d2;
    color: white;
    border-radius: 10px;
  }

  .created-month {
    letter-spacing: 2px;
    text-align: center;
    font-size: 10px;
    text-transform: uppercase;
    line-height: 14px;
  }

  .created-day {
    font-size: 27px;
    letter-spacing: 0;
    text-align: center;
    line-height: 30px;
  }

  .news-info {
    /*display: inline;*/
    padding: 0px 12px;
    /*margin-right: 10px;*/
    /*background: #f5f5f5;*/
    /*background: #666;*/
    background: #778899;
    line-height: 24px;
    font-size: 10px;
    /*color: #666;*/
    color: white;
    text-transform: uppercase;
    font-weight: bold;
    opacity:0.5;
  }

  .image-control img {
    max-width: 100%;
    max-height: 250px;
  }

  .image-control img:hover {
    transform: scale(1.5);
  }
</style>
