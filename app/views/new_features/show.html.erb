<div class="container">
  <div class="row">
    <div class="col-xs-12">
        <div class="news-item">
          <div class="title">
            <div class="news-date">
              <p class="created-day"><%= @new_feature.created_at.strftime("%e") %></p>
              <p class="created-month"><%= @new_feature.created_at.strftime("%b") %></p>
            </div>
              <h2 id="nf-title"><%= @new_feature.title %></h2>
              <p><%= link_to "Edit", edit_new_feature_path(@new_feature) %></p>|
              <p><%= link_to "Delete", new_feature_path(@new_feature), method: :delete, data: { confirm: "Are You Sure?"} %></p>
          </div>
          <hr style="border-color:#9d9d9d6b;margin:8px 0 8px 0;">
          <p class="news-info">Details</p>
          <p style="color:#778899"><%= @new_feature.text %></p>
          <div class="row" style="padding-bottom: 20px">
            <% counter = 0 %>
            <% if @new_feature.images.attachments != nil %>
              <% @new_feature.images.each do |i| %>
              <% counter += 1 %>
               <div class="-col-xs-12 col-sm-4">
                <div class="card-<%= counter %>">
                  <div class="card-image">
                    <%= image_tag i %>
                  </div>
                </div>
               </div>
              <% end %>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>


<style>
  body {
    background-color:#fff;
  }

  .news-item  {
    border-bottom: 1px solid grey;
    margin-top:50px;
    margin-bottom:30px;
  }

  .title {
    display: flex;
    justify-content: space-between;
  }

  #nf-title {
    /*position: absolute;
    left: 100px;*/
    flex-grow: 2;
    color:#445d77;
  }

  .news-date {
    /*display: flex;*/
    /*flex-direction: column;*/
    /*border-right: 1px solid red;*/
    padding: 12px 15px;
    margin: 0px 15px 6px 0px;
    background: #1c60ad;
    border: 1px solid #2c97d2;
    color: white;
    border-radius: 10px;
  }

  .created-month {
    letter-spacing: 2px;
    text-align: center;
    font-size: 10px;
    text-transform: uppercase;
    line-height: 14px;
  }

  .created-day {
    font-size: 27px;
    letter-spacing: 0;
    text-align: center;
    line-height: 30px;
  }

  .news-info {
    /*display: inline;*/
    padding: 0px 12px;
    /*margin-right: 10px;*/
    /*background: #f5f5f5;*/
    /*background: #666;*/
    background: #778899;
    line-height: 24px;
    font-size: 10px;
    /*color: #666;*/
    color: white;
    text-transform: uppercase;
    font-weight: bold;
    opacity:0.5;
  }

  .card-1,.card-2,.card-3,.card-4,.card-5,.card-6,.card-7,.card-8,.card-9 {
    background-color: white;
    box-shadow: 0px 5px 20px #555;
    margin-top: 20px;
    margin-bottom: 10px;
    position: relative;
  }

  .card-image {
    height: 200px;
    position: relative;
    overflow: hidden;
  }

  .card-image img {
    width: 100%;
    height:100%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    filter: grayscale(1);
    transition-property: filter width;
    transition-duration: .3s;
    // opacity: 0.8;
  }

  .card-1:hover,.card-4:hover,.card-7:hover {
    visibility: visible;
    opacity: 1;
    transform:scale(3,3);
    transform-origin: left;
    z-index:100;
    .card-image img {filter: grayscale(0);}
  }

  .card-2:hover,.card-5:hover,.card-8:hover {
    visibility: visible;
    opacity: 1;
    transform:scale(3,3);
    z-index:100;
    .card-image img {filter: grayscale(0);}
  }

  .card-3:hover,.card-6:hover,.card-9:hover {
    visibility: visible;
    opacity: 1;
    transform:scale(3,3);
    transform-origin: right;
    z-index:100;
    .card-image img {filter: grayscale(0);}
  }


</style>
